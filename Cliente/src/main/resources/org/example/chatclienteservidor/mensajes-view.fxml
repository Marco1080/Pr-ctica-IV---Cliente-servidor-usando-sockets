<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <TableView fx:id="messageTable" prefHeight="300.0">
        <columns>
            <TableColumn fx:id="userColumn" prefWidth="150.0" text="Usuario" />
            <TableColumn fx:id="messageColumn" prefWidth="290.0" text="Mensaje" />
            <TableColumn fx:id="dateColumn" prefWidth="160.0" text="Fecha y Hora" />
        </columns>
    </TableView>

    <HBox alignment="CENTER" spacing="10">
        <TextField fx:id="messageInput" promptText="Escribe tu mensaje..." />
        <Button fx:id="sendButton" text="Enviar" />
    </HBox>
</VBox>
