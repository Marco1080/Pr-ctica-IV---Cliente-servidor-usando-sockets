<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <TableView fx:id="messageTable" styleClass="message-table" prefHeight="300.0" prefWidth="600.0">
        <columns>
            <TableColumn text="Usuario" fx:id="userColumn" prefWidth="200.0"/>
            <TableColumn text="Mensaje" fx:id="messageColumn" prefWidth="400.0"/>
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER">
        <TextField fx:id="messageInput" promptText="Escribe tu mensaje..." styleClass="message-input"/>
        <Button text="Enviar" styleClass="send-button"/>
    </HBox>

    <Button fx:id="buttonVolver" text="Volver" onMouseClicked="#volverMenu" styleClass="back-button"/>
</VBox>
